<link rel="stylesheet" href="/css/card-default-content.css">
<style>
    #app { display: flex; justify-content: center; }
    #app > div { padding-top: 0.5rem; padding-right: 0.5rem; padding-bottom: 0.5rem; padding-left: 0; width: 90%; }
    @media (min-width: 768px) { #app > div { width: 70%; padding-left: 0.5rem; } }
</style>

<div id="app">
    <div>
        <card-default-content title="{{title}}" text="{{text}}"/>
    </div>
</div>

<script src="https://unpkg.com/vue"></script>
<script src="/js/card-default-content.js"></script>

<script defer>
    new Vue({
        components: {
            CardDefaultContent: CardDefaultContent
        }
    }).$mount('#app')
</script>
